<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>Discover our surreal adventures</h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <p>All <%= Flat.count %> flats</p>
    </div>  
  </div>

  <div class="d-flex justify-content-between"">
    <% @flats.each do |flat| %>
      <div class="flat-card mb-3">
        <div class="flat-card-image">
      
        </div>
        <div class="flat-card-content">
          <div class="flat-card-title">
            <h4><%= flat.name %></h4>
          </div>
          <p><%= flat.address %></p>
          <div class="d-flex card_infos">
            <div class="flex align-items-center">
              <i class="fa-solid fa-people-line"></i>
              <span><%= flat.number_of_guests %></span>
            </div>
            <div class="flex align-items-center ms-3">
              <i class="fa-solid fa-euro-sign"></i>
              <span><%= flat.price_per_night %></span>
            </div>
          </div>
        </div>
      </div>
      <div class="flat-actions">
        <%= link_to 'More Info', flat_path(flat) %>
      </div>
    <% end %>
  </div>
</div>

